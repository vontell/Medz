<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:fancy="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        tools:context=".MedDetailActivity">

        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="16dp">

            <ImageView
                android:id="@+id/medImage"
                android:layout_width="100dp"
                android:layout_height="140dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:paddingLeft="16dp">

                <TextView
                    android:id="@+id/medName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Levothyroxine"
                    android:textSize="30sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/medFreq"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Take 1 daily"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/medRefill"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Refill on 10/25/2018"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/rxNumber"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="bottom"
                    android:text="Rx: #234534"
                    android:textSize="24sp"
                    android:textStyle="bold" />

            </LinearLayout>


        </LinearLayout>

        <LinearLayout
            android:id="@+id/dosageCont"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="8dp"
                android:text="Dosage:"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/dosageAmount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="125 MCG"
                android:textSize="18sp" />

        </LinearLayout>


        <LinearLayout
            android:id="@+id/filledCont"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="8dp"
                android:text="Last filled:"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/filledView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="10/25/2017"
                android:textSize="18sp" />

        </LinearLayout>


        <LinearLayout
            android:id="@+id/phoneCont"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="8dp"
                android:text="Phone:"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/phoneNumber"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:phoneNumber="true"
                android:text="(860) 805-0050"
                android:textSize="18sp" />

        </LinearLayout>


        <mehdi.sakout.fancybuttons.FancyButton
            android:id="@+id/createAlarmButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="10dp"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:paddingTop="10dp"
            android:layout_margin="12dp"
            fancy:fb_borderColor="#FFFFFF"
            fancy:fb_borderWidth="1dp"
            fancy:fb_defaultColor="#536dfe"
            fancy:fb_focusColor="#485fde"
            fancy:fb_fontIconResource="\uf017"
            fancy:fb_iconPosition="left"
            fancy:fb_radius="40dp"
            fancy:fb_text="Create Alarm"
            fancy:fb_textSize="24sp"
            fancy:fb_fontIconSize="24sp"
            fancy:fb_iconPaddingRight="12dp"
            fancy:fb_textColor="#FFFFFF" />


        <mehdi.sakout.fancybuttons.FancyButton
            android:id="@+id/deletePrescriptionButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="10dp"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:paddingTop="10dp"
            android:layout_margin="12dp"
            fancy:fb_borderColor="#FFFFFF"
            fancy:fb_borderWidth="1dp"
            fancy:fb_defaultColor="#d32f2f"
            fancy:fb_focusColor="#b71c1c"
            fancy:fb_fontIconResource="\uf1f8"
            fancy:fb_iconPosition="left"
            fancy:fb_radius="40dp"
            fancy:fb_text="Delete Prescription"
            fancy:fb_textSize="24sp"
            fancy:fb_fontIconSize="24sp"
            fancy:fb_iconPaddingRight="12dp"
            fancy:fb_textColor="#FFFFFF" />

        <TextView
            android:text="Instructions"
            android:textSize="18sp"
            android:textStyle="bold"
            android:padding="16dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/instructionText"
            android:padding="16dp"
            android:textSize="16sp"
            android:textStyle="italic"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:text="Warnings"
            android:textSize="18sp"
            android:textStyle="bold"
            android:padding="16dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/warningText"
            android:padding="16dp"
            android:textSize="16sp"
            android:textStyle="italic"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </LinearLayout>
</ScrollView>
